{# src/Sdz/UserBundle/Resources/views/User/index.html.twig #}
{% extends "SdzUserBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block fos_user_content %}


    <div class="row">
        <div id="menu" class="col-sm-3">
            <h3>Admin</h3>
            <ul class="nav nav-pills nav-stacked">
                <li>
                    <a href="{{ path('sdzblog_home') }}">Accueil du blog</a>
                </li>

                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li> <a href="{{ path('sdz_user_add') }}">Ajouter un utilisateur</a></li>
                {% endif %}

            </ul>

        </div>

    </div>
    <br>

    <h2>Liste des utilisateurs</h2>
    <div style="display: block">
        <ul>
            {% for user in users %}
                <li>
                    {% include "SdzUserBundle:User:user.html.twig" %}
                </li>
            {% else %}
                <li>Pas d'utilisateurs</li>
            {% endfor %}
        </ul>
    </div>



{% endblock fos_user_content %}

{% block footer %}
    {{ parent() }}
{% endblock %}

