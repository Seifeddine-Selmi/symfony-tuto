{# src/Sdz/BlogBundle/Resources/views/Blog/delete.html.twig #}
{% extends "SdzBlogBundle::layout.html.twig" %}
{% block title %}
    Supprimer un article - {{ parent() }}
{% endblock %}

{% block sdzblog_body %}
    <h2>Supprimer l'article {{ article.id }}</h2>
    <p>
        Etes-vous certain de vouloir supprimer l'article "{{ article.title }}" ?
    </p>


    {# On met l'id de l'article dans la route de l'action du formulaire #}
    <form action="{{ path('sdzblog_delete', {'id': article.id}) }}" method="post">

        <a href="{{ path('sdzblog_home') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>

        <a href="{{ path('sdzblog_view', {'id': article.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à l'article
        </a>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {{ form_rest(form) }}
    </form>
{% endblock %}